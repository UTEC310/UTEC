                                <a href="#" aria-label="Facebook" className="text-gray-500 hover:text-[#4FB0C6]"><svg className="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.494v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/></svg></a>
                                <a href="#" aria-label="Twitter" className="text-gray-500 hover:text-[#4FB0C6]"><svg className="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616v.064c0 2.298 1.634 4.212 3.793 4.649-.41.109-.844.168-1.288.168-.328 0-.642-.029-.95-.084.618 1.905 2.422 3.238 4.545 3.275-1.625 1.272-3.669 2.029-5.88 2.029-.395 0-.783-.022-1.166-.067 2.099 1.344 4.604 2.129 7.333 2.129 8.547 0 13.31-7.056 12.934-13.653.947-.686 1.798-1.542 2.433-2.529z"/></svg></a>
                            </div>
                        </div>
                    </div>
                    <div className="text-center text-sm mt-8 border-t border-[#97D8E1] pt-6">
                        <p>&copy; {new Date().getFullYear()} UTEC – Universidad Tecnológica de Colombia. Todos los derechos reservados.</p>
                    </div>
                </div>
            </footer>
        );

        // --- Page Components ---

        const HomePage = ({ setRoute }) => {
            useEffect(() => {
                document.title = "Inicio | UTEC – Universidad Tecnológica de Colombia";
                window.scrollTo(0, 0);
            }, []);

            const features = [
                { title: "Cuerpo Docente de Excelencia", description: "Profesores con amplia experiencia académica y profesional, comprometidos con tu formación.", icon: "academic" },
                { title: "Campus Moderno y Sostenible", description: "Instalaciones de vanguardia, laboratorios equipados y amplias zonas verdes para tu bienestar.", icon: "campus" },
                { title: "Investigación e Innovación", description: "Participa en proyectos que generan conocimiento y soluciones a problemas reales de la industria.", icon: "lab" }
            ];
            
            const Icon = ({name}) => {
                if(name === "academic") return <svg xmlns="http://www.w3.org/2000/svg" className="h-12 w-12 text-[#4FB0C6]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>;
                if(name === "campus") return <svg xmlns="http://www.w3.org/2000/svg" className="h-12 w-12 text-[#4FB0C6]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M12 14l9-5-9-5-9 5 9 5z" /><path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-5.998 12.078 12.078 0 01.665-6.479L12 14z" /><path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-5.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222 4 2.222V20M1 12v7a2 2 0 002 2h18a2 2 0 002-2v-7" /></svg>;
                if(name === "lab") return <svg xmlns="http://www.w3.org/2000/svg" className="h-12 w-12 text-[#4FB0C6]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547a2 2 0 00-.547 1.806l.477 2.387a6 6 0 00.517 3.86l.158.318a6 6 0 00.517 3.86l2.387.477a2 2 0 001.806.547a2 2 0 00.547-1.806l-.477-2.387a6 6 0 00-.517-3.86l-.158-.318a6 6 0 00-.517-3.86l-2.387-.477a2 2 0 00-.547-1.806zM15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>;
                return null;
            }

            return (
                <div>
                    <section className="bg-[#E8F6F9] text-center py-20 lg:py-32">
                        <div className="container mx-auto px-4">
                            <h1 className="text-4xl md:text-6xl font-bold text-gray-800 mb-4">UTEC – Universidad Tecnológica de Colombia</h1>
                            <p className="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto mb-8">Formando el futuro con excelencia académica, innovación y un profundo sentido humano.</p>
                            <a href="#/carreras" onClick={() => setRoute('#/carreras')} className="bg-[#4FB0C6] text-white font-bold py-3 px-8 rounded-full hover:bg-[#3d8c9e] transition-colors text-lg">
                                Conoce Nuestras Carreras
                            </a>
                        </div>
                    </section>
                    
                    <section className="py-16 lg:py-24">
                        <div className="container mx-auto px-4">
                            <div className="grid grid-cols-1 md:grid-cols-3 gap-8">
                                {features.map((feature, index) => (
                                    <div key={index} className="bg-white p-8 rounded-lg shadow-md border border-gray-100 text-center">
                                        <div className="flex justify-center mb-4"><Icon name={feature.icon} /></div>
                                        <h3 className="text-xl font-semibold text-gray-800 mb-2">{feature.title}</h3>
                                        <p className="text-gray-600">{feature.description}</p>
                                    </div>
                                ))}
                            </div>
                        </div>
                    </section>
                    
                    <section className="bg-gray-50 py-16 lg:py-24">
                         <div className="container mx-auto px-4">
                             <h2 className="text-3xl font-bold text-center text-gray-800 mb-12">Programas Destacados</h2>
                             <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                                <HighlightCard setRoute={setRoute} title="Ingenierías" link="#/carreras?tipo=ingenierias" description="Soluciones innovadoras a los desafíos del mañana." />
                                <HighlightCard setRoute={setRoute} title="Carreras Tecnológicas" link="#/carreras?tipo=tecnologicas" description="Formación práctica para el mundo digital." />
                                <HighlightCard setRoute={setRoute} title="Admisiones" link="#/admisiones" description="Inicia tu camino profesional en UTEC." />
                                <HighlightCard setRoute={setRoute} title="Verificación de Títulos" link="#/verificacion-titulos" description="Valida la autenticidad de un título UTEC." />
                             </div>
                         </div>
                    </section>
                </div>
            );
        };
        
        const HighlightCard = ({ setRoute, title, description, link }) => (
            <a href={link} onClick={() => setRoute(link)} className="block bg-white p-6 rounded-lg shadow-md hover:shadow-xl hover:-translate-y-2 transition-transform duration-300">
                <h3 className="text-xl font-bold text-[#4FB0C6] mb-2">{title}</h3>
                <p className="text-gray-600">{description}</p>
            </a>
        );
        
        const CarrerasPage = ({ setRoute }) => {
            const [searchTerm, setSearchTerm] = useState('');
            const [filter, setFilter] = useState('todos');

            useEffect(() => {
                const params = new URLSearchParams(window.location.hash.split('?')[1]);
                const tipo = params.get('tipo');
                if (tipo === 'ingenierias' || tipo === 'tecnologicas') setFilter(tipo);
                else setFilter('todos');
                document.title = "Carreras | UTEC";
                window.scrollTo(0, 0);
            }, []);
            
            const carrerasFiltradas = useMemo(() => {
                let ingenierias = carrerasData.ingenierias;
                let tecnologicas = carrerasData.tecnologicas;
                if (searchTerm) {
                    ingenierias = ingenierias.filter(c => c.nombre.toLowerCase().includes(searchTerm.toLowerCase()));
                    tecnologicas = tecnologicas.filter(c => c.nombre.toLowerCase().includes(searchTerm.toLowerCase()));
                }
                return { ingenierias, tecnologicas };
            }, [searchTerm]);

            return (
                <div className="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
                    <h1 className="text-4xl font-bold text-center mb-4">Nuestros Programas Académicos</h1>
                    <p className="text-center text-gray-600 mb-8 max-w-2xl mx-auto">Explora nuestra oferta de carreras diseñadas para enfrentar los retos del futuro y prepararte para el éxito profesional.</p>
                    <div className="flex flex-col md:flex-row gap-4 justify-center items-center mb-10">
                        <input type="text" placeholder="Buscar carrera..." className="w-full md:w-1/2 px-4 py-2 border border-gray-300 rounded-full focus:ring-2 focus:ring-[#4FB0C6] focus:outline-none" value={searchTerm} onChange={(e) => setSearchTerm(e.target.value)} />
                        <div className="flex space-x-2 bg-gray-100 p-1 rounded-full">
                            <button onClick={() => setFilter('todos')} className={`px-4 py-1 rounded-full text-sm font-medium ${filter === 'todos' ? 'bg-[#4FB0C6] text-white' : 'text-gray-600'}`}>Todos</button>
                            <button onClick={() => setFilter('ingenierias')} className={`px-4 py-1 rounded-full text-sm font-medium ${filter === 'ingenierias' ? 'bg-[#4FB0C6] text-white' : 'text-gray-600'}`}>Ingenierías</button>
                            <button onClick={() => setFilter('tecnologicas')} className={`px-4 py-1 rounded-full text-sm font-medium ${filter === 'tecnologicas' ? 'bg-[#4FB0C6] text-white' : 'text-gray-600'}`}>Tecnológicas</button>
                        </div>
                    </div>
                    {(filter === 'todos' || filter === 'ingenierias') && carrerasFiltradas.ingenierias.length > 0 && (
                        <div className="mb-12">
                             {/* --- CAMBIO: Se centró y ajustó el estilo del título --- */}
                            <h2 className="text-3xl font-bold text-center mb-8 pb-2 border-b-2 border-[#4FB0C6]">Ingenierías</h2>
                            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                                {carrerasFiltradas.ingenierias.map(c => <CarreraCard key={c.slug} carrera={c} setRoute={setRoute} tipo="ingenierias" />)}
                            </div>
                        </div>
                    )}
                    {(filter === 'todos' || filter === 'tecnologicas') && carrerasFiltradas.tecnologicas.length > 0 && (
                        <div>
                           {/* --- CAMBIO: Se centró y ajustó el estilo del título --- */}
                           <h2 className="text-3xl font-bold text-center mb-8 pb-2 border-b-2 border-[#8BC34A]">Carreras Tecnológicas</h2>
                            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                                {carrerasFiltradas.tecnologicas.map(c => <CarreraCard key={c.slug} carrera={c} setRoute={setRoute} tipo="tecnologicas" />)}
                            </div>
                        </div>
                    )}
                    {carrerasFiltradas.ingenierias.length === 0 && carrerasFiltradas.tecnologicas.length === 0 && (<p className="text-center text-gray-600 mt-12">No se encontraron carreras con ese nombre.</p>)}
                </div>
            );
        };
        
        const CarreraCard = ({ carrera, setRoute, tipo }) => (
            <div className="bg-white rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300 group flex flex-col">
                <img src={carrera.imageUrl} alt={carrera.nombre} className="w-full h-48 object-cover" />
                <div className="p-6 flex flex-col flex-grow">
                    <h3 className="text-xl font-bold text-gray-800 mb-2">{carrera.nombre}</h3>
                    <p className="text-gray-600 text-sm mb-4 flex-grow">{carrera.descripcion.substring(0, 100)}...</p>
                    <div className="text-xs text-gray-500 space-y-1 mb-4">
                        <p><strong>Duración:</strong> {carrera.duracion_semestres} semestres</p>
                        <p><strong>Modalidad:</strong> {carrera.modalidad}</p>
                    </div>
                    <a href={`#/carreras/${carrera.slug}`} onClick={() => setRoute(`#/carreras/${carrera.slug}`)} className="font-semibold text-[#4FB0C6] group-hover:underline mt-auto">
                        Ver plan de estudios &rarr;
                    </a>
                </div>
            </div>
        );

        const CarreraDetallePage = ({ setRoute, slug }) => {
            const carrera = useMemo(() => {
                return [...carrerasData.ingenierias, ...carrerasData.tecnologicas].find(c => c.slug === slug);
            }, [slug]);

            useEffect(() => {
                if (carrera) document.title = `${carrera.nombre} | UTEC`;
                window.scrollTo(0, 0);
            }, [carrera]);
            
            if (!carrera) return <div className="text-center py-20">Carrera no encontrada.</div>;
            
            const totalCreditos = carrera.pensum.reduce((acc, sem) => acc + sem.creditos, 0);
            const tipo = carrerasData.ingenierias.some(c => c.slug === slug) ? 'Ingeniería' : 'Tecnología';
            
            return (
                 <div className="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
                     <nav className="text-sm text-gray-500 mb-6">
                         <a href="#/carreras" onClick={() => setRoute('#/carreras')} className="hover:underline">Carreras</a>
                         <span className="mx-2">&gt;</span>
                         <span>{carrera.nombre}</span>
                     </nav>
                     
                     <img src={carrera.imageUrl} alt={`Banner de ${carrera.nombre}`} className="w-full h-64 object-cover rounded-lg mb-8 shadow-md" />

                     <div className="grid grid-cols-1 lg:grid-cols-3 gap-12">
                        <div className="lg:col-span-2">
                             <h1 className="text-4xl font-bold text-gray-800 mb-2">{carrera.nombre}</h1>
                             <p className="text-lg text-gray-600 mb-6">{tipo}</p>
                             <p className="mb-8">{carrera.descripcion}</p>
                             <h2 className="text-2xl font-bold mb-6 mt-12 border-l-4 border-[#4FB0C6] pl-4">Plan de Estudios</h2>
                             <div className="space-y-4">
                                {carrera.pensum.map(semestre => (<SemestreAccordion key={semestre.semestre} semestre={semestre} />))}
                             </div>
                        </div>
                        <div className="lg:col-span-1">
                             <div className="bg-[#E8F6F9] p-6 rounded-lg sticky top-24">
                                <h3 className="text-xl font-bold mb-4">Información Clave</h3>
                                <ul className="space-y-3 text-gray-700">
                                    <li><strong>Duración:</strong> {carrera.duracion_semestres} semestres</li>
                                    <li><strong>Total Créditos:</strong> {totalCreditos}</li>
                                    <li><strong>Modalidad:</strong> {carrera.modalidad}</li>
                                </ul>
                                <button className="w-full mt-6 bg-[#8BC34A] text-white font-bold py-3 px-6 rounded-lg hover:bg-green-600 transition-colors">Inscríbete Ahora</button>
                             </div>
                             <div className="mt-8 bg-white p-6 rounded-lg border">
                                <h3 className="text-xl font-bold mb-4">Perfil del Egresado</h3>
                                <p className="text-sm text-gray-600">{carrera.perfil_egreso}</p>
                             </div>
                             <div className="mt-8 bg-white p-6 rounded-lg border">
                                <h3 className="text-xl font-bold mb-4">Campo Laboral</h3>
                                <p className="text-sm text-gray-600">{carrera.campo_laboral}</p>
                             </div>
                        </div>
                     </div>
                 </div>
            );
        };
        
        const SemestreAccordion = ({ semestre }) => {
            const [isOpen, setIsOpen] = useState(false);
            return (
                <div className="border rounded-lg overflow-hidden">
                    <button onClick={() => setIsOpen(!isOpen)} className="w-full flex justify-between items-center p-4 bg-gray-50 hover:bg-gray-100">
                        <span className="font-semibold">Semestre {semestre.semestre}</span>
                        <div className="flex items-center space-x-4">
                           <span className="text-sm text-gray-600">Total Créditos: {semestre.creditos}</span>
                           <svg className={`w-5 h-5 transition-transform ${isOpen ? 'transform rotate-180' : ''}`} fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M19 9l-7 7-7-7" /></svg>
                        </div>
                    </button>
                    {isOpen && (
                        <div className="p-4 border-t">
                             <ul className="space-y-2">
                                {semestre.asignaturas.map(asig => (<li key={asig.nombre} className="flex justify-between text-sm"><span>{asig.nombre}</span><span className="text-gray-500">{asig.creditos} créditos</span></li>))}
                            </ul>
                        </div>
                    )}
                </div>
            );
        };
        
        const AdmisionesPage = () => {
             useEffect(() => {
                document.title = "Admisiones | UTEC";
                window.scrollTo(0, 0);
            }, []);
            
            const steps = ["Completa el formulario de inscripción en línea.", "Adjunta los documentos requeridos (identificación, notas, etc.).", "Realiza el pago de los derechos de inscripción.", "Presenta la entrevista y/o prueba de admisión.", "Consulta los resultados y legaliza tu matrícula."];

            return (
                 <div className="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
                     <h1 className="text-4xl font-bold text-center mb-4">Proceso de Admisiones</h1>
                     <p className="text-center text-gray-600 mb-12 max-w-2xl mx-auto">Sigue estos pasos para formar parte de la familia UTEC. Estamos aquí para guiarte en cada etapa.</p>
                     <div className="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
                         <div>
                            <h2 className="text-2xl font-bold mb-6">Pasos para la Inscripción</h2>
                            <ol className="list-decimal list-inside space-y-4">
                                {steps.map((step, i) => (<li key={i} className="text-gray-700">{step}</li>))}
                            </ol>
                            <button className="mt-8 bg-[#4FB0C6] text-white font-bold py-3 px-6 rounded-lg hover:bg-[#3d8c9e] transition-colors">Solicitar Información</button>
                         </div>
                         <div className="bg-[#E8F6F9] p-6 rounded-lg">
                             <h2 className="text-2xl font-bold mb-6">Requisitos Generales</h2>
                             <ul className="list-disc list-inside space-y-2 text-gray-700"><li>Fotocopia del documento de identidad.</li><li>Resultados del examen de Estado (ICFES).</li><li>Certificado de notas de bachillerato.</li><li>Fotocopia del acta de grado o diploma de bachiller.</li><li>Recibo de pago de inscripción.</li></ul>
                             <h2 className="text-2xl font-bold mt-8 mb-6">Calendario Académico 2025-II</h2>
                             <ul className="space-y-2 text-gray-700 text-sm"><li><strong>Inscripciones:</strong> 1 de Octubre - 30 de Noviembre</li><li><strong>Entrevistas:</strong> 1 - 15 de Diciembre</li><li><strong>Resultados:</strong> 20 de Diciembre</li><li><strong>Matrículas:</strong> 10 - 20 de Enero</li><li><strong>Inicio de clases:</strong> 27 de Enero</li></ul>
                         </div>
                     </div>
                 </div>
            );
        };
        
        const VerificacionPage = () => {
            const [numero, setNumero] = useState('');
            const [resultado, setResultado] = useState(null);
            const [loading, setLoading] = useState(false);
            const [error, setError] = useState('');

            useEffect(() => {
                document.title = "Verificación de Títulos | UTEC";
                window.scrollTo(0, 0);
            }, []);

            const handleVerify = async (e) => {
                e.preventDefault();
                if (!numero) { setError('Por favor, ingresa un número de verificación.'); return; }
                setLoading(true); setError(''); setResultado(null);
                await new Promise(res => setTimeout(res, 1000));
                const registro = titulosData.registros.find(r => r.numero === numero);
                if (registro) {
                    const hashString = `${registro.numero}|${registro.nombre}|${registro.programa}|${registro.fecha_grado_iso}`;
                    const hash = await digestMessage(hashString);
                    const fechaGrado = new Date(registro.fecha_grado_iso + 'T00:00:00-05:00').toLocaleDateString('es-CO', { year: 'numeric', month: 'long', day: 'numeric', timeZone: 'America/Bogota' });
                    setResultado({ ...registro, hash, fecha_grado_formateada: fechaGrado });
                } else {
                    setError('Número de verificación no encontrado. Por favor, verifica el número e intenta de nuevo.');
                }
                setLoading(false);
            };

            return (
                 <div className="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
                     <div className="max-w-xl mx-auto text-center">
                        <h1 className="text-4xl font-bold mb-4">Verificación de Títulos</h1>
                        <p className="text-gray-600 mb-8">Ingresa el número de verificación único que se encuentra en el diploma o acta de grado para confirmar su autenticidad.</p>
                        <form onSubmit={handleVerify} className="flex flex-col sm:flex-row gap-2">
                             <input type="text" value={numero} onChange={(e) => setNumero(e.target.value.toUpperCase())} className="flex-grow px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-[#4FB0C6] focus:outline-none" />
                             <button type="submit" disabled={loading} className="bg-[#4FB0C6] text-white font-bold py-2 px-6 rounded-md hover:bg-[#3d8c9e] transition-colors disabled:bg-gray-400">{loading ? 'Verificando...' : 'Verificar'}</button>
                        </form>
                     </div>
                     <div className="mt-12 max-w-2xl mx-auto">
                        {error && <p className="text-center text-red-600 bg-red-100 p-3 rounded-md">{error}</p>}
                        {resultado && <TituloResultCard resultado={resultado} />}
                     </div>
                 </div>
            );
        };
        
        const TituloResultCard = ({ resultado }) => {
            const cardRef = useRef(null);
            const qrRef = useRef(null);
            
            useEffect(() => {
                if (qrRef.current && resultado) {
                    qrRef.current.innerHTML = "";
                    new QRCode(qrRef.current, { text: `https://utec.edu.co/verificacion?codigo=${resultado.numero}`, width: 128, height: 128, colorDark : "#000000", colorLight : "#ffffff", correctLevel : QRCode.CorrectLevel.H });
                }
            }, [resultado]);

            const handleDownloadPDF = () => {
                const { jsPDF } = window.jspdf;
                const input = cardRef.current;
                html2canvas(input, { scale: 2 }).then(canvas => {
                    const imgData = canvas.toDataURL('image/png');
                    const pdf = new jsPDF('p', 'mm', 'a4');
                    const pdfWidth = pdf.internal.pageSize.getWidth();
                    const pdfHeight = (canvas.height * pdfWidth) / canvas.width;
                    pdf.addImage(imgData, 'PNG', 0, 0, pdfWidth, pdfHeight);
                    pdf.save(`Constancia-UTEC-${resultado.numero}.pdf`);
                });
            };

            return (
                <div ref={cardRef} className="bg-white rounded-xl shadow-2xl overflow-hidden border-t-8 border-green-500 p-8 relative">
                    {/* --- CAMBIO: Sello de agua con opacidad aumentada --- */}
                    <div className="absolute z-0 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
                        <div className="w-64 h-64 rounded-full border-8 border-black opacity-20 flex items-center justify-center -rotate-12 pointer-events-none">
                            <span className="font-bold text-5xl text-black">VERIFICADO</span>
                        </div>
                    </div>
                    <div className="relative z-10">
                         <div className="flex flex-col sm:flex-row justify-between items-start mb-6">
                            <div>
                                <h2 className="text-2xl font-bold text-green-600">Título Verificado</h2>
                                <p className="text-sm text-gray-500">Estado: <span className="font-semibold text-green-700">{resultado.estado}</span></p>
                            </div>
                            <div className="text-sm text-gray-700 mt-4 sm:mt-0 sm:text-right">
                                <p className="font-bold">{resultado.universidad}</p>
                                <p>Fecha de grado: {resultado.fecha_grado_formateada}</p>
                            </div>
                         </div>
                         <div className="bg-gray-50/80 backdrop-blur-sm p-6 rounded-lg">
                            <div className="grid grid-cols-1 sm:grid-cols-3 gap-6">
                                <div className="sm:col-span-2 space-y-4">
                                    <div><label className="text-xs text-gray-500">Nombre Completo</label><p className="font-semibold text-lg">{resultado.nombre}</p></div>
                                    {resultado.documento && (<div><label className="text-xs text-gray-500">Documento de Identidad</label><p className="font-semibold">{resultado.documento}</p></div>)}
                                    <div><label className="text-xs text-gray-500">Programa Académico</label><p className="font-semibold">{resultado.programa}</p></div>
                                    <div><label className="text-xs text-gray-500">Número de Verificación</label><p className="font-semibold">{resultado.numero}</p></div>
                                </div>
                                <div className="flex justify-center items-center"><div ref={qrRef}></div></div>
                            </div>
                            
                            {/* --- CAMBIO: Se agregaron los datos de registro --- */}
                            <div className="grid grid-cols-3 gap-4 mt-4 pt-4 border-t">
                                <div><label className="text-xs text-gray-500">Registro</label><p className="font-semibold">{resultado.registro}</p></div>
                                <div><label className="text-xs text-gray-500">Libro</label><p className="font-semibold">{resultado.libro}</p></div>
                                <div><label className="text-xs text-gray-500">Folio</label><p className="font-semibold">{resultado.folio}</p></div>
                            </div>

                             <div className="mt-6 pt-4 border-t"><label className="text-xs text-gray-500">Hash de Verificación (SHA-256)</label><p className="font-mono text-xs break-all text-gray-600">{resultado.hash}</p></div>
                         </div>
                         <div className="mt-8 flex justify-end"><button onClick={handleDownloadPDF} className="bg-[#8BC34A] text-white font-bold py-2 px-4 rounded-md hover:bg-green-600 transition-colors">Descargar Constancia PDF</button></div>
                    </div>
                </div>
            );
        };
        
        const ContactoPage = () => {
             useEffect(() => {
                document.title = "Contacto | UTEC";
                window.scrollTo(0, 0);
            }, []);

            const handleSubmit = (e) => {
                e.preventDefault();
                alert("Formulario enviado (simulación). Gracias por contactarnos.");
                e.target.reset();
            };

            return (
                 <div className="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
                     <h1 className="text-4xl font-bold text-center mb-4">Contáctanos</h1>
                     <p className="text-center text-gray-600 mb-12 max-w-2xl mx-auto">¿Tienes preguntas? Estamos aquí para ayudarte. Completa el formulario o utiliza nuestros otros canales de comunicación.</p>
                     <div className="grid grid-cols-1 md:grid-cols-2 gap-12">
                         <div className="bg-white p-8 rounded-lg shadow-md border">
                            <h2 className="text-2xl font-bold mb-6">Envíanos un Mensaje</h2>
                            <form onSubmit={handleSubmit} className="space-y-4">
                                <div><label htmlFor="nombre" className="block text-sm font-medium text-gray-700">Nombre Completo</label><input type="text" id="nombre" name="nombre" required className="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#4FB0C6] focus:border-[#4FB0C6]" /></div>
                                <div><label htmlFor="email" className="block text-sm font-medium text-gray-700">Correo Electrónico</label><input type="email" id="email" name="email" required className="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#4FB0C6] focus:border-[#4FB0C6]" /></div>
                                <div><label htmlFor="mensaje" className="block text-sm font-medium text-gray-700">Mensaje</label><textarea id="mensaje" name="mensaje" rows="4" required className="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#4FB0C6] focus:border-[#4FB0C6]"></textarea></div>
                                <button type="submit" className="w-full bg-[#4FB0C6] text-white font-bold py-3 px-4 rounded-md hover:bg-[#3d8c9e] transition-colors">Enviar</button>
                            </form>
                         </div>
                         <div className="bg-[#E8F6F9] p-8 rounded-lg">
                             <h2 className="text-2xl font-bold mb-6">Información Institucional</h2>
                             <div className="space-y-4 text-gray-700">
                                {/* --- CAMBIO: Se actualizó la información de contacto --- */}
                                <p><strong>Dirección:</strong> Carrera 15 # 88 - 35, Bogotá, Colombia</p>
                                <p><strong>Teléfono:</strong> +57 (601) 333 1122</p>
                                <p><strong>Email Admisiones:</strong> informacion@utec.edu.co</p>
                                <p><strong>Horario de Atención:</strong> Lunes a Viernes de 8:00 a.m. a 5:00 p.m.</p>
                             </div>
                             <div className="mt-8 h-64 bg-gray-300 rounded-lg flex items-center justify-center"><p className="text-gray-500">Mapa (placeholder)</p></div>
                         </div>
                     </div>
                 </div>
            );
        };
        
        // --- Main App Component (Router) ---

        const App = () => {
            const [route, setRoute] = useState(window.location.hash || '#/');

            useEffect(() => {
                const handleHashChange = () => { setRoute(window.location.hash || '#/'); };
                window.addEventListener('hashchange', handleHashChange);
                return () => window.removeEventListener('hashchange', handleHashChange);
            }, []);

            const renderPage = () => {
                if (route.startsWith('#/carreras/')) {
                    const slug = route.split('/')[2];
                    return <CarreraDetallePage setRoute={setRoute} slug={slug} />;
                }
                const cleanRoute = route.split('?')[0];
                switch (cleanRoute) {
                    case '#/carreras': return <CarrerasPage setRoute={setRoute} />;
                    case '#/admisiones': return <AdmisionesPage />;
                    case '#/verificacion-titulos': return <VerificacionPage />;
                    case '#/contacto': return <ContactoPage />;
                    case '#/': default: return <HomePage setRoute={setRoute} />;
                }
            };
            
            return (
                <div className="flex flex-col min-h-screen">
                    <Header setRoute={setRoute} />
                    <main className="flex-grow">{renderPage()}</main>
                    <Footer />
                </div>
            );
        };

        const container = document.getElementById('root');
        const root = ReactDOM.createRoot(container);
        root.render(<App />);
    </script>
</body>
</html>


